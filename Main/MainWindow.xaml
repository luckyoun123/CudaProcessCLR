<Window x:Class="Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Main"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Value 1 : "/>
                <TextBox Text="{Binding p_nValue1}" Width="50"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Value 2 : "/>
                <TextBox Text="{Binding p_nValue2}" Width="50"/>
            </StackPanel>
            <Button Content="Calcurate" Width="60" Height="30" 
                    HorizontalAlignment="Left" Command="{Binding CmdCalcurate}"></Button>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="result : "/>
                <TextBox Text="{Binding p_nResult}" Width="50"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
